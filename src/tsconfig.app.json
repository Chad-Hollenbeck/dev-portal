{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": []
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": true
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "./app/core/**/*.js",
    "./app/core/**/*.ts",
    "./app/core/**/*.css",
    "./app/core/**/*.html",
    "./app/core/**/*.scss",
    "./vendor/**/*.scss",
    "./vendor/**/*.ts",
    "./vendor/**/*.js",
    "./vendor/**/*.html",
    "./environments/*.ts",
    "./assets/**/*.png",
    "./assets/**/*.jpg",
    "./assets/**/*.css"
  ]
}
